# ===================================================================
# 量化研究系统 - 环境变量配置
# 复制此文件为 .env 并填入实际值
# ===================================================================

# ==================== 数据源配置 ====================

# Tushare API Token（必填，用于数据同步）
# 获取地址: https://tushare.pro/register
TUSHARE_TOKEN=your_tushare_token_here

# API 限流配置（每分钟调用次数）
COLLECTOR__CALLS_PER_MINUTE=120

# ==================== 数据库配置 ====================

# PostgreSQL 连接信息
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=quant_research
POSTGRES_USER=quant_user
POSTGRES_PASSWORD=your_password_here

# 连接池配置
DATABASE__CONNECTION_POOL_MIN=10
DATABASE__CONNECTION_POOL_SIZE=50

# ==================== Redis 缓存配置 ====================

# Redis 连接信息
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# 缓存 TTL 配置（秒）
CACHE_TTL_STOCK_LIST=3600        # 股票列表: 1小时
CACHE_TTL_DAILY_DATA=1800        # 日线数据: 30分钟
CACHE_TTL_FACTOR_METADATA=3600   # 因子元数据: 1小时
CACHE_TTL_FACTOR_ANALYSIS=7200   # 因子分析: 2小时

# ==================== 回测配置 ====================

# 初始资金（元）
BACKTEST__INITIAL_CAPITAL=1000000

# 手续费率
BACKTEST__COMMISSION_RATE=0.0003

# 滑点率
BACKTEST__SLIPPAGE_RATE=0.0001

# ==================== 应用配置 ====================

# 运行环境 (development/production)
ENVIRONMENT=development

# 调试模式
DEBUG=false

# 日志级别 (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# ==================== 前端配置 ====================

# API 基础地址
REACT_APP_API_BASE_URL=http://localhost:8000

# ==================== 安全配置 ====================

# JWT 密钥（生产环境必须修改）
SECRET_KEY=your-secret-key-change-in-production

# CORS 允许的源（逗号分隔）
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
